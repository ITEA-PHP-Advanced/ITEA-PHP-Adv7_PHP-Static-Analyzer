#!/usr/bin/env php
<?php

use ITEA\PhpStaticAnalyzer\Analyzer\ClassesCreatedByDeveloperAnalyzer;
use ITEA\PhpStaticAnalyzer\Analyzer\ClassStructureAnalyzer;
use ITEA\PhpStaticAnalyzer\Command\ClassesAnalizeStructureClassCommand;
use ITEA\PhpStaticAnalyzer\Command\ClassesCreatedByDeveloperCommand;
use Symfony\Component\Console\Application;

require_once __DIR__ . '/../vendor/autoload.php';

$application = new Application('PHP Static Analyzer', 'v1.0.0');

$analyzer = new ClassesCreatedByDeveloperAnalyzer();
$command = new ClassesCreatedByDeveloperCommand($analyzer);
$application->add($command);

$analyzerStructureClass = new ClassStructureAnalyzer();
$commandAnalizeStructure = new ClassesAnalizeStructureClassCommand($analyzerStructureClass);
$application->add($commandAnalizeStructure);

$application->run();
